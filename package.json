{
  "name": "heartbeater",
  "version": "1.0.0",
  "description": "Heartbeater Electron App",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "prepare": "husky install",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint --config ./config/eslint.config.js --ext .js .",
    "lint:html": "htmlhint --config ./config/.htmlhintrc index.html",
    "lint:fix": "prettier --config ./config/prettier.config.js --ignore-path ./config/.prettierignore --write . && eslint --config ./config/eslint.config.js --fix --ext .js .",
    "format": "prettier --config ./config/prettier.config.js --ignore-path ./config/.prettierignore --write .",
    "format:check": "prettier --config ./config/prettier.config.js --ignore-path ./config/.prettierignore --check .",
    "analyze": "npm run lint && npm run format:check"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.39.2",
    "electron": "^33.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "htmlhint": "^1.8.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "@network-utils/vendor-lookup": "^1.0.12",
    "better-sqlite3": "^12.6.0",
    "local-devices": "^4.0.0"
  },
  "prettier": {
    "ignoreUnknown": true
  }
}
